<link rel="stylesheet" href="src/assets/css/style.css" type="text/css">

<style>
  <%- (partials.sideBarCss) %><%- (css.style) %>
</style>

<body>
  <%- (partials.sideBar) %>

    <section style='margin-left: 400px;'>
      <div>
        Page Articles
      </div>

      <!-- Trigger/Open The Modal -->
      <button id="myBtn" class="openModal btn btn-primary">Ajouter un article</button>

      <!-- The Modal -->
      <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content container">
          <span class="close">&times;</span>
          <form>
            <div class="form-group">
              <label for="exampleInputPassword1">Titre de l'article</label>
              <input type="text" class="form-control" id="titleArticle" placeholder="titre">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Contenu de l'article</label>
              <textarea class="form-control" id="contentArticle" rows="3"></textarea>
            </div>

            <button type="button" id='addArticle' class="btn btn-primary">Publier</button>
          </form>
        </div>

      </div>

      <section class="articles">
      </section>

    </section>
</body>

