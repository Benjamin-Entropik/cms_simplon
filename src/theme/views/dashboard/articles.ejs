<meta charset="UTF-8">
<title>cms_simplon</title>

<!-- CSS (load bootstrap from a CDN) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">


<style>
  <%- (partials.sideBarCss) %><%- (css.style) %>
</style>

<body>
  <%- (partials.sideBar) %>

    <section class="header">
      <h2>Articles </h2>
    </section>

    <!-- The Modal -->
    <div id="myModal" class="modal">

      <!-- Modal content -->
      <div class="modal-content container">
        <span class="close">&times;</span>
        <form>
          <div class="form-group">
            <label for="exampleInputPassword1">Titre de l'article</label>
            <input type="text" class="form-control" id="titleArticle" placeholder="titre">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Contenu de l'article</label>
            <textarea class="form-control" id="contentArticle" rows="3"></textarea>
          </div>

          <button type="button" id='add-article' class="btn">Publier</button>
        </form>
      </div>

    </div>

    <section class="dashboard">
      <div class="add-article">
        <button class="btn" id='modal-add-article'>Ajouter un article</button>

      </div>
      <div class="articles">
      </div>

    </section>
</body>

